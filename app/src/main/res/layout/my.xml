                <!--                    android:paddingBottom="5dp"-->
                <!--                    android:text="Button"-->
                <!--                    android:textColor="#151515"-->
                <!--                    android:textSize="10dp" />-->
            </TableRow>
        </TableLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:background="@drawable/bottom"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/bottom_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_outline_home_24" />

        <ImageView
            android:id="@+id/bottom_diary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_outline_class_24" />

        <ImageView
            android:id="@+id/bottom_qna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_outline_lightbulb_24" />

        <ImageView
            android:id="@+id/bottom_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_more_horiz_24"
            app:tint="#1c313a" />


    </LinearLayout>

