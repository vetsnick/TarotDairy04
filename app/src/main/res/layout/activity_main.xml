<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/ll">

    <!--액션바 좌 알림, 우 설정-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="13dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="18dp"
                    android:orientation="vertical">

                    <!--                <TextView-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_gravity="center"-->
                    <!--                    android:layout_marginTop="8dp"-->
                    <!--                    android:fontFamily="@font/basic"-->
                    <!--                    android:text="날짜"-->
                    <!--                    android:textSize="20dp" />-->

                    <TextView
                        android:id="@+id/maindate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/outline"
                        android:text="날짜 표시됨"
                        android:textSize="25dp" />
                    <!--    클릭 시 캘린더 표시, 캘린더에서 날짜 선택 가능-->
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/basic"
                    android:text="오늘의 카드"
                    android:textSize="14dp" />
                <!--    오늘의 카드 명칭 고민-->

                <ImageView
                    android:id="@+id/todayscard"
                    android:layout_width="180dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center"
                    android:background="@drawable/galaxy" />
                <!--    클릭 시, 1~78 중 랜덤 이미지 하나 등장-->
                <!--    이미 뽑은 이력이 있으면, 뽑았던 사진 표시-->
                <!--    카드명도 뜨게 만들기-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/basic"
                    android:text="↑터치해서 오늘의 카드를 뽑아주세요↑" />
                <!--    사진 선택되면 키워드로 변경 -->


                <LinearLayout
                    android:layout_gravity="center"
                    android:id="@+id/mainratingtouch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RatingBar
                        android:id="@+id/mainrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:isIndicator="true"
                        android:stepSize="0.5" />
                    <!--            레이팅바 스타일... 읽기 전용-->
                </LinearLayout>
            </LinearLayout>

            <!--        <ImageView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:maxHeight="100dp"-->
            <!--            />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/gallery"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_outline_image_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/comment"
                        android:orientation="horizontal"
                        android:paddingRight="5dp">

                        <!--                사용자가 추가하는거라 따로 글자 수 제한 안두려다 2000자로 넉넉히 둠-->

                        <EditText
                            android:id="@+id/main_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/basic"
                            android:hint="텍스트 입력"
                            android:maxLength="2000"
                            android:maxLines="4"
                            android:paddingLeft="10dp" />

                        <ImageButton
                            android:id="@+id/send"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_baseline_send_24" />

                    </LinearLayout>

                </LinearLayout>


                <!--        임시로 텍스트 뷰를 만들어서 이동할 수 있게 제작 -->


                <!--        <TextView-->
                <!--            android:hint="임시용 텍스트뷰"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"/>-->

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:background="@drawable/bottom"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/bottom_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_home_24"
            app:tint="#1c313a" />

        <ImageView
            android:id="@+id/bottom_diary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_outline_class_24" />

        <ImageView
            android:id="@+id/bottom_qna"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_outline_lightbulb_24" />

        <ImageView
            android:id="@+id/bottom_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_more_horiz_24" />
    </LinearLayout>


</LinearLayout>